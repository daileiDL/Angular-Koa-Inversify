{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "types": ["reflect-metadata", "node"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false, //在表达式和声明上有隐含的'any'类型时报错。
        "sourceMap": false,     //用于debug   
        // "rootDir":"./",      //仅用来控制输出的目录结构--outDir。
        // "outDir":"./dist",  

    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "web"
    ]
}